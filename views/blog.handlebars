<div class="container-fluid">
  <div class="blogpost card mb-3">
    <div class="card-body">
      <div
        class="container-fluid justify-content-between align-items-end d-flex"
      >
        <h3 class="card-title">
          {{blog.title}}
        </h3>
        <a href="/dashboard/{{blog.user_id}}">
          <img
            class="blog-img"
            src="/images/uploads/profile-{{blog.user_id}}.jpg"
          />
          <p class="card-text align-bottom">
            <small class="text-muted">
              {{blog.author}}
            </small>
          </p>
        </a>
      </div>
      <hr class="blog-hr" />
      <p class="m-3 card-text">
        {{blog.content}}
      </p>
      <p class="text-end card-text">
        <small class="text-muted">
          -Updated: {{blog.updatedAt}}
        </small>
      </p>
    </div>
  </div>

  <div class="comments-card card">
    <div class="card-body">
      <h3 class="card-title">
        Comments
      </h3>
      <hr class="blog-hr" />
      <div class="comments">
        
        {{#each (parse_comments blog.comments) as |comment|}}
        <div class="container-fluid">
          <div class="row">
          <div class="col-1 comment-user p-0">
            <img
              class="comment-img mx-auto"
              src="/images/uploads/profile-{{comment.user_id}}.jpg"
            />
            <p class="mb-0 comment-author text-center">
              {{comment.user.name}}
            </p>
            <p class="text-center"><small class='text-muted'>{{{comment.createdAt}}}</small></p>
          </div>
          <div class="col-11">
            <p>
              {{comment.content}}
            </p>
            </div>
          </div>
        </div>
        <hr class="blog-hr" />
        {{/each}}
      </div>
      {{#if loggedIn}}

      <textarea
        class="form-control mb-3"
        id="comment"
        rows="3"
        placeholder="Write Comment Here..."
      ></textarea>
      <button
        data-user="{{user}}"
        data-blog="{{blog.id}}"
        id="comment-btn"
        class="btn blog-btn"
      >
        Leave Comment
      </button>
      {{else}}
      <a href="/login?blogId={{blog.id}}" class="btn blog-btn">
        Login to Comment
      </a>
      {{/if}}
  </div>
</div>
<script
  src="https://code.jquery.com/jquery-3.6.1.min.js"
  integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
  crossorigin="anonymous"
></script>
<script src="/js/blog.js"></script>