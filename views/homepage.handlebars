<!-- We are tracking the number of times we visit this homepage -->

<div class="container-fluid">
  {{#each blogs as |blog|}}
    <div class="blogpost card mb-3">
      <div class="card-body">
        <div
          class="container-fluid justify-content-between align-items-end d-flex"
        >
          <h3 class="card-title">
            {{blog.title}}
          </h3>
          <a href="/profile/{{blog.user_id}}">
            <img
              class="blog-img"
              src="/images/uploads/profile-{{blog.user_id}}.jpg"
            />
            <p class="card-text align-bottom">
              <small class="text-muted">
                 {{blog.author}}
              </small>
            </p>
          </a>
        </div>
        <hr class="blog-hr" />
        <p class="m-3 truncate card-text">
          {{blog.content}}
        </p>
        <div class="d-flex container-fluid justify-content-between align-items-end">
          <a href="/blog/{{blog.id}}" class="btn blog-btn">
            Read More
          </a>
          <p class="card-text">
            <small class="text-muted">
              -Last Updated: {{blog.updatedAt}}
            </small>
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>